FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

/*
Inflow temperature:
300K
*/

T   300;

dimensions      [0 0 0 1 0 0 0];

internalField   uniform $T;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform $T;
    }

    sym
    {
        type            slip;
    }

    wedge
    {
        type            slip;
    }

    top
    {
        type            slip;
    }

    back
    {
        type            empty;
    }

    front
    {
        type            empty;
    }

    outlet
    {
        type            inletOutlet;
        inletValue      uniform $T;
        value           uniform $T;
    }
}