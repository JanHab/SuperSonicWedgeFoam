FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     rhoCentralFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         0.01;//0.002;//0.02;
// adaptive time step
// deltaT          1;//1e-7;
// // adjustTimeStep  no;
// maxCo           10000;//10; // Your target maximum Courant
deltaT          1e-6;
// adjustTimeStep yes;
// maxCo          0.5; // Or even 0.3 for safety


writeControl    runTime;

writeInterval   1e-3;//1e-2;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

