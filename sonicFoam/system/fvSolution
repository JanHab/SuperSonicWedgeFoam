FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "p.*"
    {
        // solver          smoothSolver;
        // smoother        symGaussSeidel;
        // tolerance       1e-3;//1e-06;
        // relTol          1e-3;//0;
        solver          GAMG;
        smoother        GaussSeidel;
        nPreSweeps      0;
        nPostSweeps     2;
        cacheAgglomeration true;
        tolerance       1e-3;
        relTol          1e-1;
    }

    "(U|e).*"
    {
        $p;
        tolerance       1e-5;
        relTol          1e-3;
    }

    "rho.*"
    {
        solver          PCG;
        preconditioner  AMG;//AMG; //DIC;
        tolerance       1e-3;//1e-05;
        relTol          1e-3;//0;
    }
}

PIMPLE
{
    nOuterCorrectors 1; // how often the pressure is coupled back to the momentum equation
    nCorrectors      1; // how often the pressure correction is calculated
    nNonOrthogonalCorrectors 0; // 1 // how often the non-orthogonal correction is calculated

    // Add these for high Courant number cases, not important for supersonic
    momentumPredictor   no;//yes;
    transonic           no;//yes;    // Important for supersonic flow

    // Optional: Consider adding these for more stability
    // consistent        yes;
    // nOuterIterations 2;
    residualControl
    {
        U
        {
            tolerance       1e-03;
            relTol          1e-3;//0;
        }
        p 
        {
            tolerance       1e-3;//5e-04;
            relTol          1e-3;//0;
        }
    }
}

// Add stronger relaxation
relaxationFactors
{
    fields
    {
        p               0.3;
        rho             0.5;
    }
    equations
    {
        U               0.7;
        e               0.5;
        "(k|epsilon|omega)" 0.5;
    }
}

