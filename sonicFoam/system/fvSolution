FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "p.*"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-3;//1e-06;
        relTol          1e-3;//0;
    }

    "(U|e).*"
    {
        $p;
        tolerance       1e-05;
        relTol          1e-3;//0;
    }

    "rho.*"
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-3;//1e-05;
        relTol          1e-3;//0;
    }
}

PIMPLE
{
    nOuterCorrectors 1; // how often the pressure is coupled back to the momentum equation
    nCorrectors      1; // how often the pressure correction is calculated
    nNonOrthogonalCorrectors 1;

    // Add these for high Courant number cases
    momentumPredictor   yes;
    transonic           yes;    // Important for supersonic flow

    // Optional: Consider adding these for more stability
    // consistent        yes;
    // nOuterIterations 2;
    residualControl
    {
        U
        {
            tolerance       1e-03;
            relTol          0;
        }
        p 
        {
            tolerance       5e-04;
            relTol          0;
        }
    }
}

// Add stronger relaxation
relaxationFactors
{
    fields
    {
        p               0.3;
        rho             0.3;
    }
    equations
    {
        U               0.5;//0.5;
        e               0.5;
        "(k|epsilon|omega)" 0.5;
    }
}

// ************************************************************************* //
